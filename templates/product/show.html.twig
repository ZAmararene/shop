		<div class="col-5">
			<img src="/uploads/{{ product.illustration }}" alt="" , class="img-fluid">
		</div>
		<div class="col-7 my-auto">
			<h1 class="my-5">
				{{ product.name}}
			</h1>
			<p>{{ product.subtitle }}</p>
			<span class="product-page-price">
				{{ (product.price / 100) | number_format(2, ',', '.') }}
